#!/bin/sh

set -e

curl \
	-X POST https://content.dropboxapi.com/2/files/upload \
	--header "Authorization: Bearer $(cat "$HOME/.creds/dropbox.token")" \
	--header "Dropbox-API-Arg: {\"path\": \"/$(basename "$1")\"}" \
	--header "Content-Type: application/octet-stream" \
	--data-binary "@$1" \
| jq
